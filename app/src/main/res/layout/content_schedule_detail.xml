<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/schedulesubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Subject"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/Venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/schedulesubject"
            android:text="Venue:  "/>
        <TextView
            android:id="@+id/venuetext"
            android:layout_below="@+id/schedulesubject"
            android:padding="5dp"
            android:layout_toRightOf="@id/Venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/fromdate"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Venue"
            android:text="From:    "/>
        <TextView
            android:id="@+id/fromdatetext"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fromdate"
            android:layout_below="@+id/venuetext"
            android:textStyle="normal"
            android:text="None"/>

        <TextView
            android:id="@+id/todate"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromdate"
            android:text="To:       "/>
        <TextView
            android:id="@+id/todatetext"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fromdate"
            android:layout_below="@+id/fromdatetext"
            android:textStyle="normal"
            android:text="None"/>
        <TextView
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todate"
            android:text="Start Time:  "/>
        <TextView
            android:id="@+id/starttimetext"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/starttime"
            android:layout_below="@+id/todatetext"
            android:textStyle="normal"
            android:text="None"/>
        <TextView
            android:id="@+id/endtime"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starttime"
            android:text="End Time:    "/>
        <TextView
            android:id="@+id/endtimetext"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/endtime"
            android:layout_below="@+id/starttimetext"
            android:textStyle="normal"
            android:text="None"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/endtimetext"
            android:text="Description "
            />
        <TextView
            android:id="@+id/descriptiontext"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:justificationMode="inter_word"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:text="Description: "
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>