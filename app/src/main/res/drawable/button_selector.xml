<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <item>
        <layer-list>
            <item android:right="10dp" android:top="10dp">
                <shape>
                    <solid android:color="#6b8e23" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:bottom="10dp" android:left="10dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#6b8e23" android:startColor="#32cd32" />
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="20dp" />
                    <padding android:bottom="20dp" android:left="20dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>